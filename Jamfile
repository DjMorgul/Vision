LOCATE_TARGET = [ FDirName $(TOP) objects ] ;

SubDirHdrs [ FDirName $(TOP) ] ;
SubDirHdrs [ FDirName $(TOP) src ] ;

HDRS += "/boot/system/develop/headers/private/interface" ;

SubDirC++Flags -DVERSION_STRING=\\\"0.9.8-01092008\\\" -DBUILD_DATE=\\\"Sep_01_2008\\\" -DSINGLE_BINARY -DBONE_BUILD ;
C++FLAGS += "-O2" ;

actions AddResources
{
	settype -t application/x-vnd.Be-elfexecutable $(1)
	rc src/Vision.rdef -o objects/Vision.rsrc
	rc src/VisionImages.rdef -o objects/VisionImages.rsrc
	resattr -o $(1) objects/Vision.rsrc
	xres -o $(1) objects/VisionImages.rsrc
}

Main	Vision :
	[ GLOB $(TOP) src : *.cpp ]
;

LINKLIBS on Vision = -lbe -lroot -ltracker -lcolumnlistview -ltranslation -ltextencoding -lnet ;

Always Vision ;
AddResources Vision ;
